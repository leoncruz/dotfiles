[alias]
	lg = log --oneline --decorate --graph
	st = status
	po = "!git push -u origin \"$(git branch --show-current)\""
	cm = commit -m
	cma = commit -am
	amend = !git add . && git commit --amend
	rs = "!f() { \
		git reset --soft HEAD~$1; \
		git restore --staged \\.; \
	}; f"

[core]
	editor = nvim
